<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#FAFAFA" >
    
    
      <Button
        android:id="@+id/vlc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/vlcx"
        android:shadowRadius="2.0"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowColor="#585858" />
    

    <Button
        android:id="@+id/wmp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/wmpx" />

    <Button
        android:id="@+id/ppt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        
		android:layout_marginLeft="50dp"        
		android:layout_alignParentLeft="true"
        android:layout_below="@+id/wmp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pptx"
         />

    <Button
        android:id="@+id/file_operation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/vlc"
        android:layout_marginTop="30dp"
        android:background="@drawable/explorerx"
         />

    <Button
        android:id="@+id/games"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ppt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/gamesx"
        />

    <Button
        android:id="@+id/power"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/file_operation"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/powerx"
         />

    <Button
        android:id="@+id/about_us"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/games"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/about_usx"
         />

    <Button
        android:id="@+id/settings"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/power"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/settingsx"
        />
    

</RelativeLayout>